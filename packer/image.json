{
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}",
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "{{pwd}}/packer/scripts/vagrant.sh",
                "{{pwd}}/packer/scripts/vbox.sh"
            ]
        },
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "{{pwd}}/packer/scripts/ansible.sh"
        },
        {
            "type": "ansible-local",
            "except": ["amazon-ebs"],
            "playbook_file": "{{pwd}}/playbooks/upgrade-packages.yml"
        },
        {
            "type": "ansible-local",
            "only": ["amazon-ebs"],
            "playbook_file": "{{pwd}}/playbooks/upgrade-packages.yml",
            "extra_arguments": [ "--extra-vars=\"packer=true\"" ]
        },
        {
            "type": "shell",
            "only": ["amazon-ebs"],
            "inline": ["sudo reboot"]
        },
        {
            "type": "ansible-local",
            "only": ["virtualbox-iso"],
            "playbook_file": "{{pwd}}/terraform.sample.yml",
            "inventory_groups": "role=control,role=worker,role=edge",
            "extra_arguments": [
                "--tags", "bootstrap",
                "--extra-vars=\"provider=vagrant\""
            ],
            "role_paths": [
                "{{pwd}}/roles/calico",
                "{{pwd}}/roles/chronos",
                "{{pwd}}/roles/collectd",
                "{{pwd}}/roles/common",
                "{{pwd}}/roles/consul",
                "{{pwd}}/roles/consul-template",
                "{{pwd}}/roles/dnsmasq",
                "{{pwd}}/roles/docker",
                "{{pwd}}/roles/etcd",
                "{{pwd}}/roles/flannel",
                "{{pwd}}/roles/glusterfs",
                "{{pwd}}/roles/handlers",
                "{{pwd}}/roles/haproxy",
                "{{pwd}}/roles/k8s-addons",
                "{{pwd}}/roles/k8s-master",
                "{{pwd}}/roles/k8s-minion",
                "{{pwd}}/roles/kubernetes",
                "{{pwd}}/roles/logrotate",
                "{{pwd}}/roles/logstash",
                "{{pwd}}/roles/lvm",
                "{{pwd}}/roles/mantlui",
                "{{pwd}}/roles/marathon",
                "{{pwd}}/roles/mesos",
                "{{pwd}}/roles/nginx",
                "{{pwd}}/roles/traefik",
                "{{pwd}}/roles/vault",
                "{{pwd}}/roles/zookeeper"
            ]
        },
        {
            "type": "ansible-local",
            "only": ["amazon-ebs"],
            "playbook_file": "{{pwd}}/terraform.sample.yml",
            "inventory_groups": "role=control,role=worker,role=edge",
            "extra_arguments": [
                "--tags", "bootstrap",
                "--extra-vars=\"provider=aws\""
            ],
            "role_paths": [
                "{{pwd}}/roles/calico",
                "{{pwd}}/roles/chronos",
                "{{pwd}}/roles/collectd",
                "{{pwd}}/roles/common",
                "{{pwd}}/roles/consul",
                "{{pwd}}/roles/consul-template",
                "{{pwd}}/roles/dnsmasq",
                "{{pwd}}/roles/docker",
                "{{pwd}}/roles/etcd",
                "{{pwd}}/roles/flannel",
                "{{pwd}}/roles/glusterfs",
                "{{pwd}}/roles/handlers",
                "{{pwd}}/roles/haproxy",
                "{{pwd}}/roles/k8s-addons",
                "{{pwd}}/roles/k8s-master",
                "{{pwd}}/roles/k8s-minion",
                "{{pwd}}/roles/kubernetes",
                "{{pwd}}/roles/logrotate",
                "{{pwd}}/roles/logstash",
                "{{pwd}}/roles/lvm",
                "{{pwd}}/roles/mantlui",
                "{{pwd}}/roles/marathon",
                "{{pwd}}/roles/mesos",
                "{{pwd}}/roles/nginx",
                "{{pwd}}/roles/traefik",
                "{{pwd}}/roles/vault",
                "{{pwd}}/roles/zookeeper"
            ]
        },
        {
            "type": "ansible-local",
            "only": ["amazon-ebs"],
            "playbook_file": "{{pwd}}/playbooks/upgrade-packages.yml",
            "extra_arguments": [
                "--extra-vars=\"docker_storage_driver=overlayfs\"",
                "--extra-vars=\"packer=true\""
            ]
        },
        {
            "type": "shell",
            "only": ["amazon-ebs"],
            "inline": ["sudo reboot"]
        },
        {
            "type": "shell",
            "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "{{pwd}}/packer/scripts/cleanup.sh"
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/vagrant.cfg<enter><wait>"
            ],
            "boot_wait": "10s",
            "disk_size": 20480,
            "guest_os_type": "RedHat_64",
            "headless": false,
            "http_directory": "{{pwd}}/packer/kickstarts",
            "iso_urls": [
                "iso/CentOS-7-x86_64-Minimal-1503-01.iso",
                "http://centos.mirrors.hoobly.com/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso"
            ],
            "iso_checksum_type": "sha256",
            "iso_checksum": "7cf1ac8da13f54d6be41e3ccf228dc5bb35792f515642755ff4780d5714d4278",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "microservices-infrastructure-0.5.0-x86_64",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "512"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"]
            ]
        },
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-east-1",
            "source_ami": "ami-61bbf104",
            "instance_type": "m4.large",
            "associate_public_ip_address": true,
            "communicator": "ssh",
            "ssh_username": "centos",
            "ssh_pty": true,
            "ami_description": "For use with http://mantl.io/",
            "ami_name": "mantl {{timestamp}}"
        }
    ],
    "post-processors": [[{
        "type": "vagrant",
        "compression_level": 9,
        "output": "builds/VirtualBox-microservices-infrastructure-0.5.0.box",
        "keep_input_artifact": false
    },
    {
        "type": "atlas",
        "token": "{{user `atlas_token`}}",
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
            "created_at": "{{timestamp}}",
            "provider": "virtualbox"
        },
        "only": ["virtualbox-iso"]
    }]],
    "push": {
        "base_dir": "..",
        "vcs": true,
        "exclude": ["docs"]
    }
}
